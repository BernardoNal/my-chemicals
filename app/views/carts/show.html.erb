<div class="container">
<h2 class='my-2'>Fazenda <%= @cart.storage.farm.name %> - <%= @cart.storage.name %></h1>
  <div class="row">
    <div class=" col-md-6">
      <div class="form-shape col-md-8 mx-auto">
        <%= link_to farms_path(@farm), class: 'btn-back text-decoration-none' do %>
        <i class='fa-solid fa-circle-left'></i>
        <% end %>
        <h3 class="form-title"><%= @entry == "1" ? "Entrada" : "Saída" %></h3>
        <%= simple_form_for [@cart,@cart_chemical], method: :post do |f| %>
          <%= f.hidden_field :entry, value: @entry == "1" ? 1 : 0 %>
          <%= f.input :quantity,input_html: { min: 1 } ,  label: "Quantidade" %>
          <%= f.input :chemical_id, as: :select, collection: @chemicals.map { |chemical| [chemical.product_name, chemical.id] }, label: "Quimico" %>
          <%= f.button :submit, value:
          @entry == "1" ? "Adicionar produto" : "Saída do produto", class: "my-2 btn-login" %>
        <% end %>
      </div>
      <div class="d-flex col-md-4 mx-auto mt-5">
        <%= link_to "Finalizar",cart_record_path(@cart),  data: {turbo_method: :patch}, class:'btn-login px-5 py-2 text-center' %>
      </div>
       <div class="d-flex col-md-3 mx-auto mt-3">
        <%= link_to "Voltar",cart_path(@cart),  data: {turbo_method: :delete}, class:'btn-blue px-5 py-2 text-center' %>
      </div>
    </div>
    <div class=" col-md-6">
      <div class="form-shape col-md-8 mx-auto">
        <h3 class="form-title mb-3">Produtos</h3>
        <div id='chemicals'>
          <% @cart_chemicals.each do |item| %>
            <div class="card-item">
              <div class="card-item-content">
                <%= item.chemical.product_name %> <%= item.chemical.amount %><%= item.chemical.measurement_unit %> (x<%= item.quantity%>)
              </div>

              <div class="card-item-actions">
                <%= link_to  cart_chemical_path(item,entry: @entry),  data: {turbo_method: :delete}, class:'btn-card-dlt ma' do  %>
                  <i class="far fa-trash-alt"></i>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
