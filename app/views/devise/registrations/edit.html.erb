<div class="container mt-4">
  <div class="form-shape col-md-5 mx-auto">
  <div>
    <%= link_to :back, class: 'btn-back text-decoration-none' do %>
      <i class="fa-solid fa-circle-left"></i>
    <% end %>
  </div> <h2 class="text-center">Editar Usuário </h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>
    <%= f.input :address,
                    :label => 'Endereço',
                    required: false,
                    input_html: { autocomplete: "address" }%>
    <div class="row">
      <div class="col-6">
      <%= f.input :password,
                  :label => 'Senha',
                  hint: "Deixa em branco caso não queira mudar senha",
                  required: false,
                  input_html: { autocomplete: "New Password" } %>
                </div>

    <div class="col-6">
      <%= f.input :password_confirmation,
                  :label => 'Confirmar nova senha',
                  required: false,
                  input_html: { autocomplete: "New Password" } %>
    </div>
  </div>
    <%= f.input :current_password,
                :label => 'Senha atual',
                hint: "É necessário a senha atual para confirmar a mudança",
                required: true,
                input_html: { autocomplete: "Current Password" } %>
  </div>
  <div class="col-6 mx-auto">

  <div class="row justify-content-center mb-5">
    <%= f.button :submit, "Atualizar", class: 'btn-login' %>
  </div>
<% end %>



  <div class="row justify-content-center mb-5 ">
    <%= link_to "Cancelar conta", registration_path(resource_name), class: 'btn-red  text-decoration-none', data: { turbo_confirm: "Confirmar cancelamento de conta?", turbo_method: :delete } %>
    </div>

  </div>
</div>
</div>
