<div class="container container-view mt-4">
  <div class="form-shape col-md-6 mx-auto">
  <%= link_to storages_path, class: 'btn-back text-decoration-none' do %>
    <i class='fa-solid fa-circle-left'></i>
    <% end %>
    <h2 class="form-title">Cadastrar novo Galp√£o</h2>
    <%= simple_form_for [@farm, @storage] do |f| %>
      <%= f.input :name, label: "Nome" %>
      <%= f.input :size, label: "Tamanho" %>
      <%= f.input :capacity, label: "Capacidade" %>
      <%= f.input :farm_id, as: :select, collection: @farms, label: "Fazendas" %>
      <%= f.button :submit, class: "btn-login" %>
    <% end %>
  </div>
</div>
