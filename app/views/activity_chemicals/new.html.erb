<%= simple_form_for [@activity,@activity_chemical], method: :post do |f| %>
  <%= f.input :chemical_id, as: :select, collection: @chemicals.map { |chemical| ["#{chemical.product_name} (#{chemical.amount}#{chemical.measurement_unit})", chemical.id] }, label: "Químico" %>
  <%= f.input :quantity, input_html: { min: 0 }, label: "Quantidade" %>
  <%= f.button :submit, "Adiciona químico", class: "my-2 btn-login" %>
<% end %>
