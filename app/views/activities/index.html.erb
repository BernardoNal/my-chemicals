<div class="container container-view my-4">
  <h1>Minhas Atividades</h1>
  <div class="table-responsive col-11">
    <table class="table table-striped table-bordered">
              <thead class="table-success">
                  <tr>
                      <th scope="col">Nome</th>
                      <th class='text-center d-none d-sm-table-cell' scope="col">Descrição</th>
                      <th class='text-center d-none d-sm-table-cell' scope="col">Tipo</th>
                       <th class='text-center d-sm-none d-table-cell' scope="col">Período</th>
                      <th class='text-center d-none d-sm-table-cell' scope="col-6">Data de Início</th>
                      <th class='text-center d-none d-sm-table-cell' scope="col">Data de Fim</th>
                      <th class='text-center' scope="col">Fazenda</th>
                  </tr>
              </thead>
              <tbody>
                  <% @activities.each do |activity| %>
                    <tr>
                      <td><%= activity.name %></td>
                      <td class='text-center d-none d-sm-table-cell'><%= activity.description %></td>
                      <td class='text-center d-none d-sm-table-cell'><%= activity.activity_type %></td>
                      <td class='text-center d-sm-none d-table-cell'><%= activity.date_start.strftime('%d/%m/%Y') %> <br> a <%= activity.date_end.strftime('%d/%m/%Y') %> </td>
                      <td class='text-center d-none d-sm-table-cell'><%= activity.date_start.strftime('%d/%m/%Y') %></td>
                      <td class='text-center d-none d-sm-table-cell'><%= activity.date_end.strftime('%d/%m/%Y') %></td>
                      <td class='text-center'><%= activity.farm.name%></td>
                    </tr>
                  <% end %>


              </tbody>
          </table>
  </div>
</div>

<div class="btn-plus-sign-container">
  <%= link_to "<i class='fa-solid fa-circle-plus'></i>".html_safe, new_activity_path, class: "btn-plus-sign" %>
</div>
